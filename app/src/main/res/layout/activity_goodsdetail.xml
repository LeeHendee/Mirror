<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goodsdetail_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/loading" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goodsdetail_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.my.mirror.adapter.LinkageListView
        android:id="@+id/detail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ten"
        android:visibility="visible">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back_detail"
                android:layout_width="@dimen/fifty_five"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_lee"
                android:background="@mipmap/back" />

            <Button
                android:id="@+id/btn_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixty_two_lee"
                android:background="@mipmap/wearblackbutton"
                android:text="@string/pictures_of_wearing"
                android:textColor="@android:color/white" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/forty_lee"
                    android:background="@mipmap/buybutton"
                    android:text="@string/buy" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </FrameLayout>
</RelativeLayout>