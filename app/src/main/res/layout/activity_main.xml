<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_classified_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/bg"
            android:visibility="invisible">
            <!--  TODO visible需要更改 -->

            <LinearLayout
                android:id="@+id/main_all_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_one_fourty_eight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_all_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />

                <ImageView
                    android:id="@+id/main_all_iv"
                    android:layout_width="@dimen/zc_eighty_five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zc_twenty_two"
                    android:src="@mipmap/title_underline"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_matt_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_fourty_four"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_matt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_matt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />

                <ImageView
                    android:id="@+id/main_matt_iv"
                    android:layout_width="@dimen/zc_eighty_five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zc_twenty_two"
                    android:src="@mipmap/title_underline"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_sun_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_fourty_four"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_sun_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_sun"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />

                <ImageView
                    android:id="@+id/main_sun_iv"
                    android:layout_width="@dimen/zc_eighty_five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zc_twenty_two"
                    android:src="@mipmap/title_underline"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_project_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_fourty_four"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_project_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_project"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />

                <ImageView
                    android:id="@+id/main_project_iv"
                    android:layout_width="@dimen/zc_eighty_five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zc_twenty_two"
                    android:src="@mipmap/title_underline"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_car_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_fourty_four"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_car_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_car"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />

                <ImageView
                    android:id="@+id/main_car_iv"
                    android:layout_width="@dimen/zc_eighty_five"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zc_twenty_two"
                    android:src="@mipmap/title_underline"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_back_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_fourty_four"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_back_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_exit_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginTop="@dimen/zc_seventy_eight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_exit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zc_exit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/zc_twenty_eight"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/main_ceshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:visibility="visible"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/main_mirror_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mirror_icon"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/zc_fourty_eight"
                android:layout_marginBottom="@dimen/zc_fourty"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_login"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/zc_fourty"
                android:layout_marginRight="@dimen/zc_fourty_eight"
                />
        </RelativeLayout>
    </FrameLayout>



</LinearLayout>
