<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#fff"
    android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_zero"
    android:layout_weight="1"/>
    <TextView
        android:layout_marginLeft="@dimen/down_listview_title_marginleft"
        android:layout_marginTop="@dimen/down_listview_title_margintop"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="@dimen/down_listview_title_text_size"
        android:id="@+id/downthress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/down_listview_title_image_height"
        android:layout_marginLeft="@dimen/down_listview_title_image_margin"
        android:layout_marginRight="@dimen/down_listview_title_image_margin"
        android:background="@mipmap/black_tiao"/>

</LinearLayout>