<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:id="@+id/classified">


    <!-- 菜单栏 -->
    <LinearLayout
        android:id="@+id/classified_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/classified_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_fourty_eight"
            android:layout_marginTop="@dimen/zc_one_fourty_eight"/>

        <LinearLayout
            android:id="@+id/resure_special_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_fourty_eight"
            android:layout_marginTop="@dimen/zc_fourty_four"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resure_special_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.25"
                android:text="@string/zc_special"
                android:textColor="@color/white"
                android:textSize="@dimen/zc_twenty_eight" />

            <ImageView
                android:id="@+id/resure_special_iv"
                android:layout_width="@dimen/classified_project_iv_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zc_twenty_two"
                android:src="@mipmap/title_underline"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resure_car_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_fourty_eight"
            android:layout_marginTop="@dimen/zc_fourty_four"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resure_car_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.25"
                android:text="@string/zc_car"
                android:textColor="@color/white"
                android:textSize="@dimen/zc_twenty_eight" />

            <ImageView
                android:id="@+id/resure_car_iv"
                android:layout_width="@dimen/classified_car_iv_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zc_twenty_two"
                android:src="@mipmap/title_underline"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resure_back_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_fourty_eight"
            android:layout_marginTop="@dimen/zc_fourty_four"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resure_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.25"
                android:text="@string/zc_back"
                android:textColor="@color/white"
                android:textSize="@dimen/zc_twenty_eight" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resure_exit_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_fourty_eight"
            android:layout_marginTop="@dimen/zc_seventy_eight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resure_exit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.25"
                android:text="@string/zc_exit"
                android:textColor="@color/white"
                android:textSize="@dimen/zc_twenty_eight" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
