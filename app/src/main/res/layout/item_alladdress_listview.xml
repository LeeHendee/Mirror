<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/writeaddress"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lzp_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lzp_fifteen"
                android:layout_marginTop="@dimen/lzp_twenty"
                android:text="@string/getperson"
                android:textColor="@color/black"
                android:textSize="@dimen/lzp_text_thirteen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_alladdress_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lzp_twenty"
                android:text="1111111"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lzp_fifteen"
            android:layout_marginRight="@dimen/lzp_fifteen"
            android:layout_marginTop="@dimen/lzp_ten"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lzp_ten"
                    android:layout_marginTop="@dimen/lzp_ten"
                    android:text="@string/getaddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/lzp_text_thirteen" />

                <TextView
                    android:id="@+id/item_alladdress_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lzp_ten"
                    android:text="222"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/item_alladdress_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/lzp_fourty"
                    android:layout_marginTop="@dimen/lzp_ten"
                    android:src="@mipmap/changeaddress_icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lzp_fifteen"
            android:layout_marginRight="@dimen/lzp_fifteen"
            android:layout_marginTop="@dimen/lzp_ten"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_alladdress_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lzp_twenty"
                android:layout_marginLeft="@dimen/lzp_ten"
                android:layout_marginTop="@dimen/lzp_ten"
                android:textColor="@color/black"
                android:textSize="@dimen/lzp_text_thirteen"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
