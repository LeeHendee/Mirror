<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_classified_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/zc_fourty_four"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_classified_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.25"
            android:textColor="@color/white"
            android:textSize="@dimen/zc_twenty_eight" />

        <ImageView
            android:id="@+id/item_classified_iv"
            android:layout_width="@dimen/classified_project_iv_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zc_twenty_two"
            android:src="@mipmap/title_underline"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
