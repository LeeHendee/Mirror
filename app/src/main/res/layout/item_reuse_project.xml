<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlaout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_reuse_all_background_image"
    android:layout_marginLeft="@dimen/item_project_card_margin"
    android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_reuse_all_background_image">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/item_project_pic"
                        android:layout_width="@dimen/item_reuse_project_pic_width"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_reuse_project_line_left"
                            android:layout_marginRight="@dimen/item_reuse_project_line_right"
                            android:layout_marginTop="@dimen/item_reuse_project_line_top"
                            android:src="@mipmap/black_line" />

                        <TextView
                            android:id="@+id/item_project_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_reuse_project_line_left"
                            android:layout_marginRight="@dimen/item_reuse_project_line_right"
                            android:layout_marginTop="@dimen/item_reuse_project_linearlayout_top"
                            android:textColor="@color/black"
                            android:textSize="@dimen/item_reuse_project_tv_size" />

                    </com.zhy.autolayout.AutoLinearLayout>
                </RelativeLayout>
            </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>
