<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_all_line">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="@dimen/item_reuse_all_out_height"
        android:layout_height="@dimen/item_reuse_all_background_image"
        android:layout_marginLeft="@dimen/item_reuse_all_out_left"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_reuse_all_background_image">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/item_project_pic"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>
            <!--android:layout_height="@dimen/item_reuse_all_background_image" />-->



            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_special_share_frame_height"
                android:layout_marginTop="@dimen/item_special_share_frame_margintop"
                android:background="@color/white">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_special_share_line_height"
                    android:layout_marginLeft="@dimen/item_bottom_out_left"
                    android:layout_marginRight="@dimen/item_bottom_out_right"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/item_reuse_small_line_marginbottom">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_reuse_all_black_line_height"
                        android:layout_marginTop="@dimen/item_reuse_all_black_line_top"
                        android:src="@mipmap/black_line" />
                    <TextView
                        android:id="@+id/item_project_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_special_share_tv_margintop"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoFrameLayout>

        </com.zhy.autolayout.AutoFrameLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
